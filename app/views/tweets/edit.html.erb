
<%# 投稿編集画面 %>
<%# フォームはnew.htmlと同じ %>

<%# new.htmlとの違いは、コントローラーの@tweetにデータが入っているため、modelの取得HTTPメソッドが変わる %>
<%# @tweetには選択した投稿データが入っているため、nameやtextに表示される %>

<%# @tweetにデータが入っているため、modelにより、HTTPメソッドはupdateが自動的に選ばれる %>
<%# #    PATCH  /tweets/:id(.:format)      tweets#update  サーバのデータをブラウザから送られたデータに置き換え %>
<%# #    PUT    /tweets/:id(.:format)      tweets#update  更新・作成 %>

<div class="contents row">
  <div class="container">
    <%= form_with(model: @tweet, local: true) do |form| %>
      <h3>編集する</h3>

      <%# 「_form.html.erb」の呼び出し、呼び出し先のformに、form_withメソッドのformを代入 %>
      <%= render partial: "form", locals: { form: form } %>
      
    <% end %>
  </div>
</div>